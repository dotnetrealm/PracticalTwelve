@using PracticalTwelve.Domain.Entities;
@model EmployeeInfo

<form class="py-3 mb-3" id="CreateEmployeeInfoForm">
    <h4 class="text-decoration-underline mb-4">Create Employee</h4>
    <div id="ValidationSummary" class="alert alert-danger d-none" role="alert"></div>
    <div class="row">
        <div class="col-md-3 pr-5">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "form-label required" })
            <div class="input-group mb-2">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-3 pr-5">
            @Html.LabelFor(model => model.MiddleName, htmlAttributes: new { @class = "form-label" })
            <div class="input-group mb-2">
                @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-3 pr-5">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "form-label required" })
            <div class="input-group mb-2">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-3 pr-5">
            @Html.LabelFor(model => model.DOB, htmlAttributes: new { @class = "form-label required" })
            <div class="input-group mb-2">
                @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-3 pr-5">
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "form-label" })
            <div class="input-group mb-2">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-3 pr-5">
            @Html.LabelFor(model => model.DesignationId, htmlAttributes: new { @class = "form-label" })
            <div class="input-group mb-2">
                @Html.EditorFor(model => model.DesignationId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-2 align-self-end mobile-margin">
            <button type="submit" class="btn btn-outline-dark">Create Employee</button>
        </div>
    </div>
</form>
