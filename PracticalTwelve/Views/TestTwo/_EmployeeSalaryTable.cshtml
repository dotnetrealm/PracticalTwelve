@using PracticalTwelve.Domain.Entities;
@model IEnumerable<EmployeeSalary>

<table class="table text-center" id="EmployeesSalaryDataTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"><label asp-for="First().FirstName"></label></th>
            <th scope="col"><label asp-for="First().MiddleName"></label></th>
            <th scope="col"><label asp-for="First().LastName"></label></th>
            <th scope="col"><label asp-for="First().DOB"></label></th>
            <th scope="col"><label asp-for="First().Address"></label></th>
            <th scope="col"><label asp-for="First().Salary"></label></th>
        </tr>
    </thead>
    <tbody class="text-center">
        @*displays user data*@
        @foreach (var employee in Model)
        {
            <tr id="@employee.Id">
                <th scope="row">@Html.DisplayFor(e => @employee.Id)</th>
                <td>@Html.DisplayFor(e => @employee.FirstName)</td>
                <td>@Html.DisplayFor(e => @employee.MiddleName)</td>
                <td>@Html.DisplayFor(e => @employee.LastName)</td>
                <td>@Html.DisplayFor(e => @employee.DOB)</td>
                <td>@Html.DisplayFor(e => @employee.Address)</td>
                <td>@Html.DisplayFor(e => @employee.Salary)</td>
            </tr>
        }
    </tbody>
</table>